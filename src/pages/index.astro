---
import Layout from "@layouts/Layout.astro";
import SkipLink from "@utils/SkipLink.astro";
import DeleteMe from "@components/DeleteMe.astro";
import BackToTop from "@utils/BackToTop.astro";
---

<Layout title="Hans Hofner | Software Development Consultant">
  <SkipLink />
  <div class="sr-only" id="start"></div>
  <main class="container">
    <section class="hero">
      <div class="hero-content">
        <h1>Hans Hofner</h1>
        <p class="subtitle">Software Development Consultant</p>
        <div class="intro">
          <p>
            I'm a versatile software developer with 5 years of experience crafting robust web applications 
            and delivering value through clean, maintainable code.
          </p>
        </div>
      </div>
      <div class="hero-image">
        <img
          src="/images/hans-profile.jpg"
          alt="Image of Hans Hofner"
          width="400"
          height="400"
          class="profile-image"
        />
      </div>
    </section>

    <section class="expertise">
      <h2>What I Bring</h2>
      <ul class="skills-list">
        <li>
          <strong>Frontend Excellence</strong>
          <p>Deep expertise in React ecosystem, Vue.js, and modern frontend frameworks including Next.js and Nuxt.</p>
        </li>
        <li>
          <strong>Full-Stack Capability</strong>
          <p>Proficient in Python backend development with a growing expertise in Elixir for scalable solutions.</p>
        </li>
        <li>
          <strong>Team Integration</strong>
          <p>Strong communication skills and adaptability to different team dynamics and development workflows.</p>
        </li>
      </ul>
    </section>

    <section class="contact">
      <h2>Get in Touch</h2>
      <div class="contact-links">
        <a href="mailto:hans@hofner.tech" class="contact-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          hans@hofner.tech
        </a>
        <a href="https://bsky.app/profile/hofner.tech" class="contact-item" target="_blank" rel="noopener noreferrer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
          @hofner.tech
        </a>
      </div>
    </section>
  </main>
  <section aria-label="Utilities">
    <BackToTop />
  </section>
</Layout>
